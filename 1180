import java.util.*;
import java.math.*;
public class Main{ 
	 
	public static void main(String caralho[]){
			Scanner sc=new Scanner(System.in);
			 int x,menor=99999999,ind=0; 
			 x=sc.nextInt();
			 int vet[]=new int[x];
			 for(int i=0;i<x;i++){
				 vet[i]=sc.nextInt();
				 if(menor>vet[i]){
					 menor=vet[i];
					 ind=i;
				 }
			 }
			 System.out.println("Menor valor: "+menor+"\nPosicao: "+ind);
	}
}
